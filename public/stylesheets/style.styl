body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF
h1
  font-family: Dakota
  float: left
ul
  list-style-type: none
  padding: 15px
  float: right
li
  float: left
  padding-right: 10px

ul li a:hover
  border-bottom: solid 3px #57c6ff
li a

  padding-left: 10px
 
